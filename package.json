{
  "name": "next-define",
  "version": "0.1.1",
  "description": "Fully typed `define` functions for Next.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/nurodev/next-define.git"
  },
  "homepage": "https://github.com/nurodev/next-define",
  "bugs": "https://github.com/nurodev/next-define/issues",
  "author": {
    "name": "nurodev",
    "email": "me@nuro.dev",
    "url": "https://nuro.dev"
  },
  "keywords": [
    "define",
    "next",
    "nextjs",
    "typescript"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "LICENSE",
    "README.md"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./app": {
      "import": "./dist/app.mjs",
      "require": "./dist/app.js"
    },
    "./package.json": "./package.json"
  },
  "typesVersions": {
    "*": {
      "app": [
        "./dist/app.d.ts"
      ]
    }
  },
  "scripts": {
    "dev": "yarn build --watch",
    "build": "rimraf dist && tsup",
    "build:prod": "cross-env NODE_ENV=production yarn build",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:ui": "vitest watch --ui"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^18.15.11",
    "@types/react": "^18.0.31",
    "@types/react-dom": "^18.0.11",
    "@vitejs/plugin-react": "^3.1.0",
    "@vitest/ui": "^0.29.8",
    "cross-env": "^7.0.3",
    "minifaker": "^1.34.1",
    "next": "^13.2.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^4.4.1",
    "tsup": "^6.7.0",
    "typescript": "^5.0.3",
    "vitest": "^0.29.8"
  },
  "peerDependencies": {
    "next": ">=12 || >=13",
    "react": ">= 17 || >=18"
  },
  "peerDependenciesMeta": {
    "next": {
      "optional": false
    },
    "react": {
      "optional": false
    }
  }
}
